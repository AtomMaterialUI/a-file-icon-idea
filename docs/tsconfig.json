{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "./src",
    "removeComments": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
